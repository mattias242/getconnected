# Environment Configuration Example
# Copy this file to .env and update the values

# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME=GetConnected
APP_VERSION=1.0.0

# Database Configuration (for production with external database)
# DATABASE_URL=postgresql://user:pass@localhost:5432/getconnected
# DATABASE_TYPE=sqlite # sqlite, postgresql, mysql

# Security Configuration
# SECRET_KEY=your-secret-key-here
# CORS_ORIGIN=https://your-domain.com

# External API Keys (for future integrations)
# DISCORD_BOT_TOKEN=your-discord-bot-token
# SLACK_BOT_TOKEN=your-slack-bot-token
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=false
ENABLE_REAL_TIME_UPDATES=false

# Performance Configuration
MAX_USERS_PER_GROUP=100
MAX_GROUPS_PER_USER=50
REQUEST_TIMEOUT=30000

# Deployment Configuration
VERCEL_URL=
HEROKU_APP_NAME=
RAILWAY_PROJECT_ID=